body, div, h1, h2, h3, h4, h5, h6, p, ul, ol, li, dl, dt, dd, img, form, fieldset, input, textarea, blockquote {
    margin: 0; padding: 0; border: 0;
}

body {
    background: #909eab url(bg.png);
    font-family: Helvetica, sans-serif; font-size: 15px; line-height: 20px;
}

nav {
    width: 1340px;
	height: 80px;
	margin: 0 auto;
	padding: 0px 20px;
    text-align: center;
}

nav ul ul {
    display: none;
}

nav ul li:hover > ul {
    display: block;
}


nav ul {
    background: #BACDE7 url(images/img02.jpg) repeat;
    background: linear-gradient(top, #BACDE7 0%, #bbbbbb 100%);
    background: -moz-linear-gradient(top, #BACDE7 0%, #bbbbbb 100%);
    background: -webkit-linear-gradient(top, #BACDE7 0%,#bbbbbb 100%);
    box-shadow: 0px 0px 2px rgba(0,0,0,0.15);
    padding: 0 10px;
    border-radius: 3px;
    list-style: none;
    position: relative;
    display: inline-table;
}
nav ul:after {
    content: ""; clear: both; display: block;
}

nav ul li {
    float: left;
}
nav ul li:hover {
    background: #BACDE7;
    background: linear-gradient(top, #BACDE7 0%, #5f6975 40%);
    background: -moz-linear-gradient(top, #BACDE7 0%, #5f6975 40%);
    background: -webkit-linear-gradient(top, #BACDE7 0%,#5f6975 40%);
}
nav ul li:hover a {
    color: #BACDE7;
    display: block
}

nav ul li a {
    display: block; padding: 10px 15px;
    color: #527800; text-decoration: none;
}


nav ul ul {
    background: #5f6975; border-radius: 0px; padding: 0;
    position: absolute; top: 100%;
}
nav ul ul li {
    float: none;
    border-top: 1px solid #6b727c;
    border-bottom: 1px solid #527800; position: relative;
}
nav ul ul li a {
    padding: 5px 10px;
    color: #15428B;
}
nav ul ul li a:hover {
    color: #BACDE7;
    overflow: auto
}

nav ul ul ul {
    position: absolute; left: 100%; top:0;
}

